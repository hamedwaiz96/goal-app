<h1>Hello: <%= @user.email %></h1>


<ul>
  <% @user.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>

<br>
<form action="<%= comments_url %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="comment[author_id]" value="<%= current_user.id %>">
  <input type="hidden" name="comment[commentable_id]" value="<%= @user.id %>">
  <input type="hidden" name="comment[commentable_type]" value="User">
  <label for="comment">Comment</label>
  <textarea id="comment" name="comment[body]" rows="1" cols="20"></textarea>
  <input type="submit" value="Add New Comment">
</form>
<br>

<a href="<%= goals_url %>">Look at all Public Goals</a>
