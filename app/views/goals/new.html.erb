<%= flash[:errors2] %>

<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="goal[user_id]" value="<%= current_user.id %>">
  <label for="title">Title</label>
  <input id="title" type="text" name="goal[content]">
  <br>
  <label for="details">Details</label>
  <textarea id="details" name="goal[details]" rows="1" cols="20"></textarea>
  <br>
  <label for="private">Private</label>
  <input id="private" type="checkbox" name="goal[private]" value="true">
  <label for="public">Public</label>
  <input id="public" type="checkbox" name="goal[private]" value="false">
  <br>
  Completed?
  <label for="complete">Yes</label>
  <input id="complete" type="checkbox" name="goal[completed]" value="true">
  <label for="uncomplete">No</label>
  <input id="uncomplete" type="checkbox" name="goal[completed]" value="false">
  <br>
  <input type="submit" value="Submit New Goal">
</form>
